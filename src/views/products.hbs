<section class="product-page">
    <div class="mb-4">
        <h3>Productos</h3>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Titulo</th>
                <th scope="col">Precio</th>
                <th scope="col">Thumbnail</th>
            </tr>
        </thead>
        <tbody id="tableTbody">
            {{#if products.length}}
                {{#each products}}
                    <tr class="product-item">
                        <th scope="row">{{id}}</th>
                        <td>{{title}}</td>
                        <td>${{price}}</td>
                        <td>
                            <img class="product-img" src="{{thumbnail}}" alt="img" srcset="">
                        </td>
                    </tr>
                {{/each}}
            {{else}}
            <tr>
                <th scope="row">no products</th>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>